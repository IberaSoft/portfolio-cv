{
  "name": "portfolio-cv",
  "version": "2.0.0",
  "private": true,
  "description": "My personal website built with Next.js and Notion.",
  "author": "Juan Cruz Llorens",
  "repository": "iberasoft/portfolio-cv",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "deploy": "vercel deploy",
    "deps:upgrade": "[ -z $GITHUB_ACTIONS ] && pnpm up -L notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link": "[ -z $GITHUB_ACTIONS ] && run-s deps:link:* || echo 'Skipping deps:update on CI'",
    "deps:unlink": "[ -z $GITHUB_ACTIONS ] && pnpm add notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link:notion-types": "pnpm link ../react-notion-x/packages/notion-types",
    "deps:link:notion-utils": "pnpm link ../react-notion-x/packages/notion-utils",
    "deps:link:notion-client": "pnpm link ../react-notion-x/packages/notion-client",
    "deps:link:react-notion-x": "pnpm link ../react-notion-x/packages/react-notion-x",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "test": "run-p test:*",
    "test:lint": "eslint . --fix",
    "test:prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}'",
    "release:patch": "npm run test && npm version patch && git push origin main --tags",
    "release:minor": "npm run test && npm version minor && git push origin main --tags",
    "release:major": "npm run test && npm version major && git push origin main --tags",
    "prepare": "husky init",
    "lint-staged": "lint-staged",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@keyvhq/core": "^2.1.11",
    "@keyvhq/redis": "^2.1.11",
    "@vercel/analytics": "^1.6.1",
    "classnames": "^2.5.1",
    "expiry-map": "^2.0.0",
    "fathom-client": "^3.7.2",
    "ky": "^1.14.0",
    "lqip-modern": "^2.2.1",
    "next": "^16.0.6",
    "notion-client": "^7.7.1",
    "notion-types": "^7.7.1",
    "notion-utils": "^7.7.1",
    "p-map": "^7.0.4",
    "p-memoize": "^7.1.1",
    "posthog-js": "^1.299.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-body-classname": "^1.3.1",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-notion-x": "^7.7.1",
    "react-tweet": "^3.2.2",
    "react-use": "^17.6.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fisch0920/eslint-config": "^1.4.0",
    "@next/bundle-analyzer": "^16.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "cacheable-request": {
      "keyv": "npm:@keyvhq/core@~1.6.6"
    }
  }
}
